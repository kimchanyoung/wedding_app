<body id='login-page'>
  <div class='video'><iframe src="https://player.vimeo.com/video/132626656?autoplay=1&loop=1" width="800" height="600" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
  <div class="overlay"></div>
</div>

  <h1 id='login-intro'>What are you doing <%= @date_diff%> days from today?</h1>
  <form id='login-form' action='login_attempt'>
    <%= token_tag %>
    <input id='pword-attempt' type='password' name='pword_attempt' placeholder='password'>
    <input id='pword-submit' type='submit' value='enter'>
  </form>
</body>
